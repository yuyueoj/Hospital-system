/* pages/departments/departments.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.hospital-header {
  background: linear-gradient(135deg, #4a90e2, #357abd);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  color: white;
}

.hospital-info {
  display: flex;
  flex-direction: column;
}

.hospital-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.hospital-address {
  font-size: 24rpx;
  opacity: 0.9;
  line-height: 1.4;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.departments-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.department-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.department-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
}

.department-card {
  display: flex;
  padding: 30rpx;
  align-items: center;
}

.department-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #4a90e2, #357abd);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.department-icon .icon {
  font-size: 36rpx;
  color: white;
}

.department-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.department-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.department-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.department-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.doctors-count {
  font-size: 24rpx;
  color: #4a90e2;
  font-weight: 500;
}

.arrow {
  font-size: 20rpx;
  color: #999;
  transform: rotate(0deg);
  transition: transform 0.3s ease;
}

.department-item:active .arrow {
  transform: rotate(90deg);
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.back-button {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #dee2e6;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
}

.back-button:active {
  background: #e9ecef;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .department-card {
    flex-direction: column;
    text-align: center;
  }
  
  .department-icon {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
}