/* pages/doctor-detail/doctor-detail.wxss */
.container {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.doctor-header {
  background: linear-gradient(135deg, #4a90e2, #357abd);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  color: white;
}

.doctor-photo-large {
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.photo-large {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.doctor-avatar-large {
  width: 140rpx;
  height: 140rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  font-size: 48rpx;
  color: white;
  font-weight: bold;
}

.doctor-basic-info {
  flex: 1;
}

.doctor-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.doctor-title {
  font-size: 26rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin-bottom: 12rpx;
}

.doctor-hospital {
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.4;
}

.info-sections {
  padding: 20rpx;
}

.info-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #4a90e2;
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 60rpx;
  height: 2rpx;
  background: #4a90e2;
}

.info-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  line-height: 1.5;
}

.label {
  font-size: 26rpx;
  color: #666;
  min-width: 160rpx;
  flex-shrink: 0;
}

.value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.contact-item {
  cursor: pointer;
  transition: background-color 0.3s ease;
  padding: 16rpx;
  margin: -16rpx;
  border-radius: 12rpx;
}

.contact-item:active {
  background-color: #f8f9fa;
}

.phone-number {
  color: #4a90e2;
  font-weight: 500;
}

.call-icon {
  font-size: 24rpx;
  margin-left: 12rpx;
}

.schedule-info {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #4a90e2;
}

.schedule-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.introduction {
  line-height: 1.8;
}

.introduction-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
}

.specialties-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 8rpx;
}

.specialty-tag {
  background: #e3f2fd;
  color: #1976d2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  line-height: 1.2;
}

.consultation-info {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #4a90e2;
}

.consultation-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: block;
}

.consultation-tips {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 16rpx;
}

.action-button {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  border: none;
}

.action-button.secondary {
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #dee2e6;
}

.action-button.secondary:active {
  background: #e9ecef;
}

.action-button.primary {
  background: #4a90e2;
  color: white;
}

.action-button.primary:active {
  background: #357abd;
}

.loading-state,
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.loading-state text,
.error-state text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.retry-button {
  background: #4a90e2;
  color: white;
  border: none;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.retry-button:active {
  background: #357abd;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .doctor-header {
    flex-direction: column;
    text-align: center;
    padding: 40rpx 20rpx;
  }
  
  .doctor-avatar-large {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .info-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
  
  .label {
    min-width: auto;
  }
}